<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.WanAndroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/Theme.WanAndroid.Toolbar</item>
        <item name="android:textViewStyle">@style/Theme.WanAndroid.TextView</item>
        <item name="editTextStyle">@style/Widget.Theme.WanAndroid.EditText</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.WanAndroid.Launcher" parent="Theme.WanAndroid">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="Theme.WanAndroid.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">?attr/colorPrimaryDark</item>
        <item name="titleTextColor">@color/colorItem</item>
        <item name="android:iconTint">@color/colorItem</item>
        <item name="startIcon">@drawable/ic_arrow_left</item>
    </style>

    <style name="Theme.WanAndroid.Toolbar.Title" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.WanAndroid.Toolbar.Popup" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownWidth">wrap_content</item>
    </style>

    <style name="Theme.WanAndroid.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="Widget.Theme.WanAndroid.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorHint">@color/colorSubText</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Widget.Theme.WanAndroid.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabSelectedTextColor">@color/colorText</item>
        <item name="tabTextColor">@color/colorSubText</item>
        <item name="tabIndicatorHeight">1dp</item>
        <item name="tabIndicatorColor">@color/colorText</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabMode">auto</item>
    </style>

</resources>